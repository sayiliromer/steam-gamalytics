{
  "manifest_version": 3,
  "name": "Steam Gamalytics Info",
  "version": "1.0",
  "description": "Displays Gamalytics data like estimated revenue on Steam game pages.",
  "permissions": ["activeTab", "scripting", "storage"],
  "content_scripts": [
    {
      "matches": ["*://store.steampowered.com/app/*"],
      "js": ["content.js"],
      "css": ["styles.css"]
    }
  ],
  "background": { "service_worker": "bg.js" }
}
